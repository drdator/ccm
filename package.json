{
  "name": "ccm-monorepo",
  "version": "0.1.0",
  "description": "Claude Command Manager - Monorepo containing CLI and API",
  "private": true,
  "workspaces": [
    "cli",
    "api"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev:cli": "npm run dev --workspace=cli",
    "dev:api": "npm run dev --workspace=api",
    "build:cli": "npm run build --workspace=cli",
    "build:api": "npm run build --workspace=api",
    "start:cli": "npm run start --workspace=cli",
    "start:api": "npm run start --workspace=api",
    "migrate": "npm run migrate --workspace=api"
  },
  "keywords": ["claude", "ai", "commands", "package-manager", "monorepo"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ccm.git"
  }
}